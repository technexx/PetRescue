<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/eastValley"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/southLA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/harbor"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/harbor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/westLA"
            app:layout_constraintTop_toBottomOf="@id/eastValley"
            app:layout_constraintBottom_toTopOf="@id/northCentral"
            android:layout_marginStart="4dp" />

        <Button
            android:id="@+id/northCentral"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/harbor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/westValley"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="4dp">
        </Button>

        <Button
            android:id="@+id/southLA"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/eastValley"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/westLA"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp">
        </Button>

        <Button
            android:id="@+id/westLA"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/southLA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/harbor"
            app:layout_constraintBottom_toTopOf="@id/westValley"
            android:layout_marginEnd="4dp">
        </Button>

        <Button
            android:id="@+id/westValley"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/westLA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/northCentral"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>