<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="@color/off_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/all_animals"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:backgroundTint="@color/test4"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp">
        </Button>

        <Button
            android:id="@+id/westValley"
            android:text="@string/loc_westValley"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/all_animals"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/Grey"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp">
        </Button>

        <Button
            android:id="@+id/eastValley"
            android:text="@string/loc_eastValley"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toEndOf="@id/westValley"
            app:layout_constraintTop_toBottomOf="@id/all_animals"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/test2"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/westLA"
            android:text="@string/loc_westLA"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/westValley"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/test3"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp">
        </Button>

        <Button
            android:id="@+id/southLA"
            android:text="@string/loc_southLA"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toEndOf="@id/westLA"
            app:layout_constraintTop_toBottomOf="@id/westValley"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/test3"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp">
        </Button>

        <Button
            android:id="@+id/northCentral"
            android:text="@string/loc_northCentral"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/westLA"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/Grey"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"
            >
        </Button>

        <Button
            android:id="@+id/harbor"
            android:text="@string/loc_harbor"
            android:layout_width="168dp"
            android:layout_height="135dp"
            app:layout_constraintTop_toBottomOf="@id/westLA"
            app:layout_constraintStart_toEndOf="@id/northCentral"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            app:backgroundTint="@color/test6"
            app:cornerRadius="10dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>